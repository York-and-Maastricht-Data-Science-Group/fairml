<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.epsilon.fairml.dt.editor.FairMLEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="fairml"
            icon="icons/edl.png"
            id="org.eclipse.epsilon.fairml.dt.editor.FairMLEditor"
            name="FairML Language Editor"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.eclipse.epsilon.fairml.dt.launching.FairMLLaunchConfigurationDelegate"
            icon="icons/edl.png"
            id="FairML File"/>
   </extension>
  
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.eclipse.epsilon.fairml.dt.launching.FairMLLaunchConfigurationDelegate"
            id="org.eclipse.epsilon.fairml.dt.launching.FairMLLaunchConfigurationDelegate"
            modes="run, debug"
            name="FairML File"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.eclipse.epsilon.fairml.dt.launching.FairMLLaunchConfigurationTabGroup"
            description="Create a configuration to launch a FairML File"
            id="org.eclipse.epsilon.fairml.dt.launching.FairMLLaunchConfigurationTabGroup"
            type="org.eclipse.epsilon.fairml.dt.launching.FairMLLaunchConfigurationDelegate"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.epsilon.dt"
            class="org.eclipse.epsilon.fairml.dt.wizards.NewFairMLFileWizard"
            icon="icons/edl.png"
            id="org.eclipse.epsilon.fairml.dt.wizards.NewFairMLFileWizard"
            name="FairML File"/>
   </extension>
   <extension
         point="org.eclipse.epsilon.common.dt.moduleImplementation">
      <implementation
            class="org.eclipse.epsilon.fairml.FairMLModule"
            default="false"
            dialog="org.eclipse.epsilon.fairml.dt.launching.FairMLModuleConfiguration"
            language="FairML"
            name="FairML">
      </implementation>
   </extension>

</plugin>
